<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/addressdetail_headbar"
        layout="@layout/headbar_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addressdetail_headbar"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/receive_name_lay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/myaddress_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:text="收件人"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/receive_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@color/transparent"
                android:ems="10"
                android:enabled="false"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="18sp" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/receive_phonenum_lay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/receive_name_lay"
            android:background="@drawable/myaddress_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:text="手机号"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/receive_phonenum"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@color/transparent"
                android:ems="10"
                android:enabled="false"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/receive_ucode_lay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/receive_phonenum_lay"
            android:background="@drawable/myaddress_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:text="邮编"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/receive_ucode"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@color/transparent"
                android:ems="10"
                android:enabled="false"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/receive_area_lay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/receive_ucode_lay"
            android:background="@drawable/myaddress_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:text="所在地区"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/receive_area"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@color/transparent"
                android:ems="10"
                android:enabled="false"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/receive_address_lay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/receive_area_lay"
            android:background="@drawable/myaddress_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:text="详细地址"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/receive_address"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@color/transparent"
                android:ems="10"
                android:enabled="false"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="18sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/default_address_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/address_bottom_selector"
            android:paddingLeft="35dp"
            android:text="设为默认收货地址"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/delete_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/default_address_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:text="删除地址"
            android:textColor="@color/head_bar_txt"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>