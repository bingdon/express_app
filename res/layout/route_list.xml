<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/route_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp" >

        <ImageView
            android:id="@+id/route_myhead"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/data_head"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/route_receive_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/route_myhead"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/route_myhead"
            android:text="发件人：张洋"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/route_from_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/route_receive_name"
            android:layout_below="@+id/route_receive_name"
            android:layout_marginTop="10dp"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="线路：北京-上海"
            android:textColor="@color/gray"
            android:maxWidth="140dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/route_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/route_from_to"
            android:layout_below="@+id/route_from_to"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="时间：2014-09-10"
            android:textColor="@color/gray"
            android:maxWidth="140dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/route_goodsinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/route_time"
            android:layout_below="@+id/route_myhead"
            android:layout_marginTop="20dp"
            android:text="物品信息：鲜花，2000克"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/route_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/route_goodsinfo"
            android:layout_below="@+id/route_goodsinfo"
            android:text="联系电话：13711111111"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/get_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/route_selector" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/get_order"
            android:layout_marginRight="45dp"
            android:background="@drawable/sendrecevie_icon" />

        <TextView
            android:id="@+id/route_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:text="2.2km"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/input_line" />
    </RelativeLayout>

</RelativeLayout>