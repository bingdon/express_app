<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myaddress_bg" >

        <TextView
            android:id="@+id/myaddress_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="北京"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/myaddress_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/myaddress_city"
            android:layout_below="@+id/myaddress_city"
            android:layout_marginTop="10dp"
            android:text="北京海淀区万寿寺路"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/default_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <RadioButton
                android:id="@+id/address_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/myaddress_icon"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认地址"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>